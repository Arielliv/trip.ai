{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"]
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.ts",
        "**/*.spec.js",
        "**/*.spec.ts",
        "**/*.test.tsx",
        "**/*.spec.jsx",
        "**/*.driver.tsx",
        "**/*.driver.jsx"
      ],
      "extends": ["plugin:testing-library/react"]
    }
  ]
}
